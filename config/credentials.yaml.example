# CTF Manager Credentials Template
# Copy this file to credentials.yaml and fill in your actual values

aws:
  profile: "ekocloudsec"  # AWS CLI profile to use
  region: "us-east-1"     # Default AWS region

azure:
  subscription_id: "your-azure-subscription-id"
  tenant_id: "your-azure-tenant-id"
  location: "East US"

gcp:
  project_id: "your-gcp-project-id"
  region: "us-central1"
  credentials_file: "path/to/service-account.json"  # Optional

# Global settings
global:
  auto_approve: false           # Set to true for automated deployments
  parallel_execution: false     # Set to true to enable parallel challenge deployment
  log_level: "INFO"            # DEBUG, INFO, WARNING, ERROR
  backup_state: true           # Backup terraform state before operations
